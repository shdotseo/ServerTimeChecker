<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="10dp">

    <FrameLayout
        android:id="@+id/clock_container"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@android:color/white" >

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/clock"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@android:color/black"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:text="00:00:00" />
    </FrameLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/test_timer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="System Time"
        android:gravity="right"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/clock_container"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="글자 크기:"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/test_timer"
        app:layout_constraintLeft_toLeftOf="parent" />

    <androidx.appcompat.widget.AppCompatSeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:id="@+id/font_size"
        android:max="100"
        android:min="20"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/size"
        app:layout_constraintTop_toBottomOf="@+id/size" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="여백:"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/font_size"
        app:layout_constraintLeft_toLeftOf="parent" />

    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/margin_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:max="50"
        android:min="20"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/size"
        app:layout_constraintTop_toBottomOf="@+id/margin" />

</androidx.constraintlayout.widget.ConstraintLayout>